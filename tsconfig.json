{
  "version": "2.1.4",

  "compilerOptions": {
    "target": "es5",
    "lib": [ "dom", "es2015", "es2016", "es2017" ],
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals" : true,
    "noUnusedParameters" : true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },

  "//" : "compilerOption -- outDir : build",

  "exclude" : [
    "node_modules",
    "node_modules/**",
    "**/node_modules"
  ]
}
